<% layout('layouts/boilerplate') %>
    <h1 class="text-center">Welcome to your Dashboard</h1>

    <div class="row container">
        <div class="container col">
            <div>
                <h2>Create Task</h2>
                <form action="/todos" method="POST">
                    <div class="mb-3 ">
                        <input type="text" name="name" class="form-control" id="task" aria-describedby="task" placeholder="Task Name" required>
                    </div>
                    <button class="btn btn-primary mb-3">Create</button>
                </form>
            </div>
            <div class="mb-5 row">
                <h2 class="mb-3">Your Tasks</h2>
                <ul class="list-group"></ul>
                    <% for (let todo of todos) { %>
                        <li class="d-flex flex-row justify-content-between mb-2">
                            <div>
                                <input class="form-check-input checkbox me-3 " type="checkbox" id="<%= todo._id %>" onchange="toggleStrikethrough()">
                                <label class="form-check-label fs-5" for="<%= todo._id %>" id="label"><%= todo.name %></label>
                            </div>
                            <div class="d-flex justify-content-end">
                                <form action="/todos/<%= todo._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </li>
                        <hr>
                    <% } %>
                </ul>
            </div>
        </div>
        <div class="container col">
            <h2>Color Picker</h2>
            <input type="color" id="colorPick" class="">
            <div class="d-block">
                <button class="btn btn-sm btn-primary col" onclick="colorChange()" id="colorButton">Background Color</button>
                <button class="btn btn-sm btn-primary col" onclick="colorTextChange()" id="colorTextButton">Text Color</button>
            </div>
        </div>
    </div>