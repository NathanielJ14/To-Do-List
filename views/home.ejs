<% layout('layouts/boilerplate') %>

    <h1 class="text-center">Welcome to your To-Do List</h1>

    <div class="container">
        <div class="mb-5">
            <h2>Tasks</h2>
            <% for (let todo of todos) { %>
                <p><%= todo.name %></p>
            <% } %>
            
        </div>

        <div>
            <h2>Create a task</h2>

            <form action="/todos" method="POST">
                <div class="mb-3 ">
                    <input type="text" name="name" class="form-control" id="task" aria-describedby="task" placeholder="Task Name">
                </div>
                <button class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
